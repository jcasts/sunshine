<% darwin = deploy_server.os_name =~ /^darwin$/i %>

<% if sudo == true || sudo == 'root' %>
user nobody nobody;
<% end %>
worker_processes  <%= processes %>;
pid               <%= expand_path pid %>;
error_log         <%= expand_path log_file(:stderr) %> info;

events {
  worker_connections  1024;
  <% unless darwin %>
  use epoll;
  <% end %>
}

http {

  <% if use_passenger? %>
  passenger_root <%= passenger_root %>;
  <% end %>

  client_body_temp_path <%= darwin ? '/var/tmp/nginx' : '/dev/shm' %>;
  proxy_temp_path <%= darwin ? '/var/tmp/nginx' : '/dev/shm' %>;

  include       mime.types;
  default_type  application/octet-stream;

  log_format atti_main '$remote_addr - $remote_user [$time_local] '
                      '"$request" $status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_cookie" $request_time '
                      '$upstream_http_x_urid';
  access_log <%= expand_path log_file(:stdout) %> atti_main;

  
  # This should be some other include file
  include  <%= expand_path config_path %>/nginx_optimize.conf;
  
  
  ##
  # gZip config
  gzip              on;
  gzip_disable      "MSIE [1-6]\.";
  gzip_min_length   1100;
  gzip_buffers      4 8k;
  gzip_http_version 1.0;
  gzip_comp_level   5;
  gzip_proxied      any;
  gzip_types        text/plain text/html text/css application/x-javascript application/xml application/xml+rss text/javascript;

  <% if target.is_a?(Sunshine::Server) %>
  upstream app_server {
    server 0:<%= target.port %> fail_timeout=<%= timeout %>;
  }
  <% end %>

  ##
  # 301 redirect www to non-www host.
  server {
    listen <%= port %>;
    server_name www.<%= server_name %>;
    rewrite ^/(.*) http://<%= server_name %>/$1 permanent;
  }

  ##
  # Main server definition.
  server {
    listen <%= port %> default;
    server_name <%= server_name %>;
    port_in_redirect off; # needed for the F5, unfortunately
    server_name_in_redirect off;

    <% if use_passenger? %>
    passenger_enabled on;
    <% end %>

    root <%= expand_path app.current_path %>/public;

    log_format partner_api '$remote_addr - $remote_user [$time_local] '
                           '"$request" $status $body_bytes_sent "$http_referer" '
                           '"$http_user_agent" "$http_cookie" $request_time '
                           '$upstream_status $upstream_response_time';

    <% if log_file(:impressions) %>
    location = /images/li.gif {
      empty_gif;
      access_log <%= expand_path log_file(:impressions) %> atti_main;
      break;
    }
    <% end %>

    location ~* /images/(accepted_li|logging_impressions|logging_clicks|logging_requests|xlc|xlr|xli|api_result|lni).gif$ {
      empty_gif;
    }

    ##
    # Protect system controller.
    location /_priv/ {
      allow 10.0.0.0/8;
      allow 12.186.229.30;
      allow 12.186.229.32;
      allow 12.186.229.34;
      allow 12.186.229.36;
      allow 12.186.229.38;
      allow 12.186.229.40;
      allow 198.87.24.254;
      allow 198.87.24.253;
      deny all;

      proxy_pass http://app_server;
    }
    
    ##
    # Main proxy
    location / {
      <% if darwin %>
      ssi on;
      <% end %>
      if (-f $request_filename) {
        break;
      }

      include  <%= expand_path config_path %>/nginx_proxy.conf;
      expires -1;

      if (!-f $request_filename) {
        proxy_pass http://app_server;
        break;
      }
      error_page   500 502 503 504  /500.html;
      location = /500.html {
        root <%= expand_path app.current_path %>/public;
      }
    }
  }

}
